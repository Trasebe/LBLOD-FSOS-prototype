{
  "presets": [
    "@babel/preset-env"
  ],
  "plugins": ["@babel/plugin-proposal-class-properties", "@babel/plugin-proposal-optional-chaining"],
  "env": {
    "production": {
      "presets": ["@babel/preset-env"],
      "plugins": [
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-proposal-optional-chaining"
      ],
      "ignore": [
        "src/__tests__/**/*.js*"
      ]
    },
    "test": {
      "presets": ["@babel/preset-env"],
      "plugins": [
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-proposal-optional-chaining"
      ]
    }
  }
}
